<script type="text/javascript">
    !function($) {
        $(function() {
            var $x = $('#x');
            var $y = $('#y');
            var $width = $('#width');
            var $height = $('#height');
            var update = function(cropper) {
                $x.val(cropper.x);
                $y.val(cropper.y);
                $width.val(cropper.w);
                $height.val(cropper.h);
            };
            $('#cropper').Jcrop({
                onChange: update,
                onSelect: update,
                aspectRatio: 0.77
            });
        });
    }(jQuery);
</script>